<h1>Hello, Tint!</h1>
<% if current_user %>
  Signed in as <%= current_user.name %>!
  <%= link_to "Sign out", signout_path %>
<% else %>
  <%= link_to "Sign in with Twitter", "/auth/twitter" %>
<% end %>

<%= form_for :hashtagchallenge, url: hashtags_path do |f| %>
  <%= f.label "Hashtag #1:" %>
  <%= f.text_field :hashtag1 %>
  <%= f.label "Hashtag #2:" %>
  <%= f.text_field :hashtag2 %>
  <%= f.label :end_date %>
  <%= f.date_field :end_date %>
  <%= f.submit %>
<% end %> 
